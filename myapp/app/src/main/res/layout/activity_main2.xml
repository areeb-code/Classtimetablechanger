<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_googl"
    android:orientation="vertical"
    tools:context=".ShowAppsActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/g_light"

        android:text="Class Timetable Changer"
        android:textAlignment="center"
        android:textSize="25dp"

        />


    <Button
        android:id="@+id/btn_list"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="180dp"

        android:fontFamily="@font/g_light"
        android:text="Submitted Lists"
        android:textAlignment="center"
        android:textAllCaps="false"

        android:textSize="30dp" />

    <Button
        android:id="@+id/btn_new"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/g_light"
        android:text="Submit New"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/g_light"
        android:text="itsareebahmed"
        android:textAlignment="center"
        android:textColor="#EB298D"
        android:textSize="25dp"

        />

    <Button
        android:id="@+id/button4"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Logout"

        android:textAlignment="center" />

    <TextView
        android:id="@+id/deleteacc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Delete my account"
        android:textAlignment="center"
        android:textColor="#D81B60"
        android:textSize="14sp" />


</LinearLayout>